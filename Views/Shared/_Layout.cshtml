<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodDelivery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodDelivery.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bolder text-warning" asp-area="" asp-controller="Home" asp-action="Index">FoodDelivery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="User" asp-action="Index">Üyeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Address" asp-action="Index">Adresler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Enterprise" asp-action="Index">İşletmeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Enterprise" asp-action="Index">İşletme-Değerlendirmeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">Menüler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Order" asp-action="Index">Siparişler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">Kampanya</a>
                        </li>
                    </ul>                    
                        <!--
                        <div class="nav-item dropdown me-md-4">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown link
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>

                        -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white">
        <div class="container">
            &copy; 2024 - FoodDelivery - Emirhan Hasırcı
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
